  <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
  <script type="text/javascript">

    google.charts.load('current', {'packages':['corechart']});
    google.charts.setOnLoadCallback(drawChart);

    // If no data on the chart exists, we initialize the first, fixed data row.
    // i.e., this is a simple "first user click on the Search button initializer".
    if (titlesArray = null) {
      var titlesArray = ["Year"];
      var 1900sArray  = ["1900"];
      var 1910sArray  = ["1910"];
      var 1920sArray  = ["1920"];
      var 1930sArray  = ["1930"];
      var 1940sArray  = ["1940"];
      var 1950sArray  = ["1950"];
      var 1960sArray  = ["1960"];
      var 1970sArray  = ["1970"];
      var 1980sArray  = ["1980"];
      var 1990sArray  = ["1990"];
      var 2000sArray  = ["2000"];
    }


    titlesArray.push("<%= @Name %>");
    1900sArray.push("<%= @year1900 %>");
    1910sArray.push("<%= @year1910 %>");
    1920sArray.push("<%= @year1920 %>");
    1930sArray.push("<%= @year1930 %>");
    1940sArray.push("<%= @year1940 %>");
    1950sArray.push("<%= @year1950 %>");
    1960sArray.push("<%= @year1960 %>");
    1970sArray.push("<%= @year1970 %>");
    1980sArray.push("<%= @year1980 %>");
    1990sArray.push("<%= @year1990 %>");
    2000sArray.push("<%= @year2000 %>");


    function drawChart() {
      var data = google.visualization.arrayToDataTable([
        // Todo: Swap out these constants with the actual birth frequencies (year1900, year1910, etc.).
        titlesArray,
        1900sArray,
        1910sArray,
        1920sArray,
        1930sArray,
        1940sArray,
        1950sArray,
        1960sArray,
        1970sArray,
        1980sArray,
        1990sArray,
        2000sArray,
      ]);

      var options = {
        title: 'Name Frequency',
        curveType: 'function',
        legend: { position: 'bottom' },
        desc: true
      };

      var chart = new google.visualization.LineChart(document.getElementById('curve_chart'));

      chart.draw(data, options);
    }
